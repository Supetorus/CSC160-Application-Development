<Page x:Class="Login.Pages.InsidePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:local="clr-namespace:Login.Pages"
	  mc:Ignorable="d"
	  d:DesignHeight="450"
	  d:DesignWidth="800"
	  Title="Inside"
	  FocusManager.FocusedElement="{Binding ElementName=txtNote}">

	<StackPanel Width="300"
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
		<TextBlock x:Name="txtWelcome"
				   FontSize="32"
				   Margin="0, 0, 0, 5" 
				   HorizontalAlignment="Center"
				   Foreground="DarkBlue"/>
		<TextBlock x:Name="txtInfo"
				   Margin="0, 5" />
		<TextBox x:Name="txtNote"
				 Height="100"
				 Margin="0, 5" 
				 AcceptsReturn="True"/>
		<Button Content="Save"
				Click="Save_Click"
				Margin="0, 5" 
				HorizontalAlignment="Center"/>
		<Button Content="Log out"
				Click="LogOut_Click"
				Margin="0, 5, 0, 0"
				HorizontalAlignment="Center" />
	</StackPanel>
</Page>
